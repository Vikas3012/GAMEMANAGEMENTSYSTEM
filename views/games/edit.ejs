<h1 class="mb-4">Edit Game</h1>
<div class="card">
  <div class="card-body">
    <form action="/games/<%= game._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="gameName" class="form-label">Game Name</label>
        <input
          type="text"
          id="gameName"
          name="gameName"
          class="form-control"
          value="<%= game.gameName %>"
          readonly
          disabled
        />
        <small class="text-muted">Game name cannot be changed.</small>
      </div>
      <div class="mb-3">
        <label for="numberOfPlayer" class="form-label">Number of Players</label>
        <input
          type="number"
          id="numberOfPlayer"
          name="numberOfPlayer"
          class="form-control"
          value="<%= game.numberOfPlayer %>"
          required
          min="1"
        />
        <div class="invalid-feedback">
          Number of players is required
        </div>
      </div>
      <div class="mb-3">
        <label for="gameDuration" class="form-label">Game Duration (minutes)</label>
        <input
          type="number"
          id="gameDuration"
          name="gameDuration"
          class="form-control"
          value="<%= game.gameDuration %>"
          required
          min="1"
        />
        <div class="invalid-feedback">
          Game duration is required
        </div>
      </div>
      <div class="mb-3">
        <label for="platform" class="form-label">Platform</label>
        <input
          type="text"
          id="platform"
          name="platform"
          class="form-control"
          value="<%= game.platform %>"
          required
        />
        <div class="invalid-feedback">
          Platform is required
        </div>
      </div>
      <div class="d-flex">
        <button type="submit" class="btn btn-warning me-2">Update Game</button>
        <a href="/games" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>
