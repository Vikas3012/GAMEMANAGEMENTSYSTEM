<h1 class="mb-4">Games List</h1>
<a href="/games/new" class="btn btn-success mb-3">Add New Game</a>

<% if(games.length > 0) { %>
  <div class="row">
    <% games.forEach(function(game) { %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= game.gameName %></h5>
            <p class="card-text">
              <strong>Players:</strong> <%= game.numberOfPlayer %><br>
              <strong>Duration:</strong> <%= game.gameDuration %> minutes<br>
              <strong>Platform:</strong> <%= game.platform %>
            </p>
            <div class="d-flex justify-content-between">
              <a href="/games/<%= game._id %>" class="btn btn-primary">View Details</a>
              <a href="/games/<%= game._id %>/edit" class="btn btn-warning">Edit</a>
              <form action="/games/<%= game._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this game?')">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
<% } else { %>
  <div class="alert alert-info">
    You haven't added any games yet. <a href="/games/new">Add your first game</a>
  </div>
<% } %>
