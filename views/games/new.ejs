<h1 class="mb-4">Add New Game</h1>
<div class="card">
  <div class="card-body">
    <form action="/games" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="gameName" class="form-label">Game Name</label>
        <input
          type="text"
          id="gameName"
          name="gameName"
          class="form-control"
          placeholder="Enter Game Name"
          value="<%= typeof gameName != 'undefined' ? gameName : '' %>"
          required
        />
        <div class="invalid-feedback">
          Game name is required
        </div>
      </div>
      <div class="mb-3">
        <label for="numberOfPlayer" class="form-label">Number of Players</label>
        <input
          type="number"
          id="numberOfPlayer"
          name="numberOfPlayer"
          class="form-control"
          placeholder="Enter Number of Players"
          value="<%= typeof numberOfPlayer != 'undefined' ? numberOfPlayer : '' %>"
          required
          min="1"
        />
        <div class="invalid-feedback">
          Number of players is required
        </div>
      </div>
      <div class="mb-3">
        <label for="gameDuration" class="form-label">Game Duration (minutes)</label>
        <input
          type="number"
          id="gameDuration"
          name="gameDuration"
          class="form-control"
          placeholder="Enter Game Duration"
          value="<%= typeof gameDuration != 'undefined' ? gameDuration : '' %>"
          required
          min="1"
        />
        <div class="invalid-feedback">
          Game duration is required
        </div>
      </div>
      <div class="mb-3">
        <label for="platform" class="form-label">Platform</label>
        <input
          type="text"
          id="platform"
          name="platform"
          class="form-control"
          placeholder="Enter Platform"
          value="<%= typeof platform != 'undefined' ? platform : '' %>"
          required
        />
        <div class="invalid-feedback">
          Platform is required
        </div>
      </div>
      <div class="d-flex">
        <button type="submit" class="btn btn-success me-2">Add Game</button>
        <a href="/games" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>
